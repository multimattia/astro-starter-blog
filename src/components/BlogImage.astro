---
import { Image } from "astro:assets";

const { src, alt } = Astro.props;
---

<div class="blogimage">
  <Image class="image" src={src} alt={alt} />
  <figcaption id="imgcap">{alt}</figcaption>
</div>

<style is:inline>
  .blogimage {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.35rem;
    margin: 1rem 0;
  }

  .image {
    max-width: 97%;
    height: auto;
    border-radius: 0.375rem;
  }

  figcaption {
    font-style: oblique;
    font-weight: 300;
    font-size: 0.85rem;
  }

  @media screen and (min-width: 687px) {
    .image {
      max-width: 100%;
    }
  }
</style>
