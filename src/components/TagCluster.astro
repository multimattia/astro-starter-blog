---
const allPosts = await Astro.glob("../pages/posts/*.md");
const allTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<div class="tags">
  {
    allTags.map((tag) => (
      <p class="tag">
        <a href={`/tags/${tag}`}>{tag?.toLowerCase()}</a>
      </p>
    ))
  }
</div>

<style>
  a {
    color: #005389f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: none;
    border-radius: 5px;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }

  html.dark .tag {
    background-color: #4640a6;
  }

  html.dark a {
    color: rgb(226, 226, 226);
  }
</style>
