<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 750px;
    text-align: center;
    min-width: calc(100% - 40px);
  }

  .clusters {
    display: grid;
    grid-template-columns: 3fr 2fr;
    margin-top: 3rem;
    width: 100%;
    gap: 3rem;
  }
  .left-cluster {
    display: flex;
    flex-direction: row;
    gap: 1.9rem;
  }

  .right-cluster {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .column {
    display: flex;
    flex-direction: column;
    justify-items: start;
  }

  .border {
    margin-top: 2rem;
    position: absolute;
    min-width: 100%;
    border-top: 1px solid var(--color-light-border);
  }

  html.dark .border {
    border-top: 1px solid var(--color-night-listing-bg);
  }

  .left-cluster p {
    margin: 0 0;
    margin-block-start: 0;
    margin-block-end: 0;
    text-align: left;
  }

  .right-cluster p {
    font-family: var(--lexend);
    color: var(--color-light-deemp);
    font-size: 0.75em;
    font-style: italic;
    text-align: center;
  }

  a:visited {
    color: var(--color-light-a);
  }

  .right-cluster p,
  .right-cluster a {
    text-decoration: none;
    color: var(--color-light-deemp);
    transition: transform 0.2s ease-in-out;
  }

  html.dark .right-cluster a {
    color: var(--color-night-text);
  }

  #vote:hover {
    transform: scale(1.1);
  }

  html.dark #vote:hover {
  }

  html.dark a:visited {
    color: var(--color-night-a);
  }

  a {
    text-decoration-thickness: 1px;
    text-decoration-color: #bbb;
  }

  a:hover {
    text-underline-offset: 2px;
    color: black;
    text-decoration-color: #000;
    background-color: transparent;
  }

  html.dark a:hover {
    color: white;
    text-decoration-color: #fff;
    background-color: transparent;
  }

  @media screen and (min-width: 687px) {
    a {
      font-size: 0.9rem;
    }
    .clusters {
      grid-template-columns: 1fr 4fr;
    }
  }
</style>
