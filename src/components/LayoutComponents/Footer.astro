---
import Social from "@components/Social.astro";
---

<footer>
  <div class="container">
    <Social
      text="GitHub"
      link="https://github.com/multimattia/astro-starter-blog"
    />
    <p>Made with lots of Ovaltine.</p>
  </div>
</footer>

<style>
  footer {
    display: flex;
    justify-content: center;
    gap: 1rem;
    max-width: 500px;
    margin: 60px 0px;
    margin-left: auto;
    margin-right: auto;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 3rem;
  }

  p {
    color: var(--color-light-deemp);
    font-size: 0.75em;
    font-style: italic;
    text-align: center;
    max-width: 500px;
  }

  html.dark p {
    color: var(--color-night-deemp);
  }
</style>
