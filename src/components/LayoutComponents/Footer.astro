---
import Social from "@components/Social.astro";
---

<footer>
  <Social
    text="GitHub"
    link="https://github.com/multimattia/astro-starter-blog"
  />
  <p>Made with lots of Ovaltine.</p>
</footer>

<style>
  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 3rem auto 0 auto;
    max-width: 750px;
    text-align: center;
    min-width: calc(100% - 40px);
  }

@media screen and (min-width: 687px) {
  footer {
    position: absolute;
    bottom: 0;
  }
}

  p {
    color: var(--color-light-deemp);
    font-size: 0.75em;
    font-style: italic;
    text-align: center;
  }

  html.dark p {
    color: var(--color-night-deemp);
  }
</style>
