<style>
  html.dark .border {
    border-top: 1px solid var(--color-night-listing-bg);
  }

  a {
    font-size: 0.8rem;
    text-decoration-thickness: 1px;
    text-decoration-color: #bbb;
    text-align: left;
  }

  a:hover {
    text-underline-offset: 2px;
    text-decoration-color: #000;
    background-color: unset;
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-width: 750px;
    text-align: center;
    min-width: calc(100% - 40px);
  }

  .clusters {
    margin-top: 4rem;
  }

  .border {
    margin-top: 2rem;
    position: absolute;
    width: 100vw;
    /* border-top: 1px solid #bbb; */
    border-top: 1px solid var(--color-light-listing-bg);
  }
  @media screen and (min-width: 687px) {
    .clusters {
      display: grid;
      grid-template-columns: 1fr 4fr;
      margin-top: 3rem;
      width: 100%;
      gap: 3rem;
    }
    .left-cluster {
      display: flex;
      flex-direction: row;
      gap: 1rem;
    }

    .right-cluster {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: flex-start;
    }
    .border {
      margin: 1rem auto 2rem auto;
    }

    .column {
      display: flex;
      flex-direction: column;
      justify-items: start;
    }
  }

  p {
    color: var(--color-light-deemp);
    font-size: 0.75em;
    font-style: italic;
    text-align: center;
  }

  html.dark p {
    color: var(--color-night-deemp);
  }
</style>
