---
import Social from "./Social.astro";
---

<style>
  footer {
    display: flex;
    justify-content: center;
    gap: 1rem;
    max-width: 500px;
    margin: 60px 0px;
    margin-left: auto;
    margin-right: auto;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  p {
    color: rgb(189, 189, 189);
    font-size: 0.75em;
    font-style: italic;
    text-align: center;
    max-width: 500px;
  }

  html.dark p {
    color: rgb(129, 129, 129);
  }
</style>

<footer>
  <div class="container">
    <Social platform="GitHub" username="multimattia/astro-starter-blog" />
    <p>Made with lots of Ovaltine.</p>
  </div>
</footer>
