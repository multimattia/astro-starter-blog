---
const { activeLink } = Astro.props;
const linkList = [
  ["Home", "/"],
  ["About", "/about"],
  ["Blog", "/blog"],
];
---

<div class="nav-links">
  {
    linkList.map((link) => (
      <a
        href={link[1]}
        style={
          activeLink.toLowerCase() === link[0].toLowerCase()
            ? "text-decoration:underline"
            : "font-weight:100"
        }
      >
        {link[0]}
      </a>
    ))
  }
</div>
