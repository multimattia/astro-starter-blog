---
const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
import TagCluster from "../components/TagCluster.astro";
---

<BaseLayout pageTitle="Blog" highlightedTab="Blog">
  <h1>{frontmatter.title}</h1>
  <div class="tag-and-date-container">
    <div class="tag-row">
      <p class="indicator">tags:</p>
      <div class="tags">
        {
          frontmatter.tags.map((tag: string) => (
            <p class="tag">
              <a href={`/tags/${tag}`}>{tag}</a>
            </p>
          ))
        }
      </div>
    </div>
    <span class="date-container">
      <p class="field">
        {frontmatter.pubDate.toString().slice(0, 10)}
      </p>
    </span>
  </div>
  <slot />
</BaseLayout>

<style is:inline>
  .astro-code {
    padding: 10px;
  }
</style>

<style>
  .tag-and-date-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .field {
    font-family: monospace;
  }

  .title-and-date-container > h1 {
    margin-bottom: 0;
  }

  .date-container {
    text-align: right;
    align-self: flex-end;
    margin-bottom: 0.5rem;
    margin-right: 0.5rem;
  }

  .date-container > p {
    margin: 0;
    min-width: 15ch;
  }

  a {
    color: #00539f;
    font-family: monospace;
  }

  html.dark a {
    color: #e2e2e2;
  }

  .indicator {
    color: #757474;
    font-style: italic;
    font-family: monospace;
    margin-bottom: 2px;
  }

  html.dark .indicator {
    color: rgb(225, 225, 225);
  }

  .tag {
    margin: 0.25em;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 0.85em;
    background-color: #f8fcfd;
  }

  .tags {
    margin-top: 10px;
    display: flex;
    flex-wrap: wrap;
  }

  html.dark .tag {
    background-color: #4640a6;
  }
</style>
