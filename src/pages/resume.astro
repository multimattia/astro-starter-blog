---
import BaseLayout from "@layouts/BaseLayout.astro";
import "../styles/global.css";

const pageTitle = "Resume";
---

<BaseLayout pageTitle={pageTitle} highlightedTab={pageTitle}>
  <embed
    class="resume"
    src="/MatthewChanResume.pdf"
    height="1025"
    type="application/pdf"
  />
  <a href="/MatthewChanResume.pdf">Link to resume</a>
</BaseLayout>

<style>
  a {
    display: block;
    margin-top: 2rem;
    text-align: center;
  }
  .resume {
    display: none;
  }

  @media screen and (min-width: 686px) {
    .resume {
      display: flex;
      max-width: 100%;
      width: 100%;
    }
    a {
      display: none;
    }
  }
</style>
