---
import RandomQuestion from "@components/pizazz/RandomQuestion.astro";
import WnrsQuestion from "@components/pizazz/WnrsQuestion.svelte";
import BaseLayout from "@layouts/BaseLayout.astro";
---

<BaseLayout pageTitle="WNRS: Level 2">
  <WnrsQuestion client:only level={2} />
  <div class="controls">
    <div class="one">
      <p><a href="../">{`HOME`}</a></p>
    </div>
    <div class="two">
      <p><a href="../level-3/">REFLECTION</a></p>
    </div>
  </div>
</BaseLayout>

<style>
  .controls {
    margin-top: 3rem;
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
  }

  .controls a {
    text-decoration: none;
  }
</style>
